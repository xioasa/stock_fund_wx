<!--index.wxml-->
<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<view class="container">
  <view class="userinfo">
    <block wx:if="{{!hasUserInfo && canIUse}}">
      <!-- <button type="primary" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 登录/注册 </button> -->
      <button type="primary" bindtap="toLogin"> 登录/注册 </button>
      <text class="userinfo-nickname">登录后可在多设备间同步数据</text>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <mp-cells>
    <mp-cell link value="云备份"></mp-cell>
    <mp-cell link url="../index" value="云恢复"></mp-cell>
  </mp-cells>
  <mp-dialog title="登录" show="{{loginDialog}}" bindbuttontap="loginDialogButton" buttons="{{buttons}}">
    <mp-form id="loginForm" rules="{{loginRules}}" models="{{loginForm}}">
      <mp-cells>
        <mp-cell show-error prop="username" title="用户名" ext-class="labelCls">
          <input bindinput="formInputChange" data-field="username" class="weui-input" placeholder="请输入用户名"/>
        </mp-cell>
        <mp-cell show-error prop="password" title="密码" ext-class="labelCls">
          <input bindinput="formInputChange" type="password" data-field="password" class="weui-input" placeholder="请输入密码"/>
        </mp-cell>
      </mp-cells>
    </mp-form>
  </mp-dialog>
  <mp-dialog title="注册" show="{{registerDialog}}" bindbuttontap="loginDialogButton" buttons="{{buttons}}">
    <mp-form id="registerForm" rules="{{registerRules}}" models="{{registerForm}}">
      <mp-cells>
        <mp-cell show-error prop="username" title="用户名" ext-class="labelCls">
          <input bindinput="formInputChange" data-field="username" class="weui-input" placeholder="请输入用户名"/>
        </mp-cell>
        <mp-cell show-error prop="password" title="密码" ext-class="labelCls">
          <input bindinput="formInputChange" type="password" data-field="password" class="weui-input" placeholder="请输入密码"/>
        </mp-cell>
        <mp-cell show-error prop="conFirmPwd" title="确认密码" ext-class="labelCls">
          <input bindinput="formInputChange" type="password" data-field="conFirmPwd" class="weui-input" placeholder="请再次输入密码"/>
        </mp-cell>
      </mp-cells>
    </mp-form>
  </mp-dialog>
</view>

